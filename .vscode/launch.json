{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Tailwind",
      "command": "npx @tailwindcss/cli -i ${workspaceFolder}\\myvb_web\\static\\css\\source.css -o ${workspaceFolder}\\myvb_web\\static\\css\\main.css --watch",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Django",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": [
        "runserver"
      ],
      "django": true
    },
  ],
  "compounds": [
    {
      "name": "Django & Tailwind",
      "configurations": ["Django", "Tailwind"],
      "stopAll": true
    }
  ]
}